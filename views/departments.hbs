<div class="row">
    <div class="col-md-12">
            <h2>Departments
                <a href="/departments/add" class="btnbtn-success pull-right">Add New Department</a>
            </h2>
            <hr />
    </div>
</div>
<div class = "row">
    <div class = "col-md-12">
        <div class = "table-responsive">
            <table class = "table">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td><a href="/employees?department={{departmentId}}"> {{departmentId}} </a></td>
                            <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>                        </tr>
                            <input type="submit" class="btnbtn-danger" value="Remove" /><br /><br /><br />
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>